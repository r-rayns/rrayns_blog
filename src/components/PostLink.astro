---
import Link from "./Link.astro";

export interface Props {
  href: string;
}

const {href} = Astro.props;
---

<div class="flex flex-col">
  <Link href={href} target="" class="text-cyan-600 dark:text-cyan-200 hover:text-cyan-400 dark:hover:text-cyan-300">
    <slot/>
  </Link>
  <span class="text-sm font-mono text-cyan-900 dark:text-cyan-100"><slot name="date"/></span>
</div>
