---
export interface Props {
  src: string;
  title?: string;
}

const {src, title} = Astro.props as Props;
---

<video
    width="100%"
    muted="muted"
    controls
    aria-label={title || "Video content"}
    title={title}
    preload="metadata">
  <source src={src} type="video/mp4"/>
  Your browser does not support HTML5 video.
</video>
