---
export interface Props {
  href: string;
  target?: string;
  class?: string;
}

let {class: className, href, target = "_blank"} = Astro.props;
className = `${className} w-fit text-cyan-600 dark:text-cyan-300 hover:text-cyan-400 dark:hover:text-cyan-500 rounded-sm`;
if (href[0] === "#") {
  // link is to header within page, remove _blank target
  target = "";
}
---

<a
  href={href}
  target={target}
  rel="noopener noreferrer"
  class={className}
>
  <slot/>
</a>
