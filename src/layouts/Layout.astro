---
import NavLink from "../components/NavLink.astro";
import ThemeToggle from "../components/ThemeToggle.astro";

export interface Props {
  title: string;
}

const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <!-- initial-scale=1? -->
  <meta name="viewport" content="width=device-width"/>
  <link rel="icon" type="image/ico" href="/favicon.ico"/>
  <meta name="description" content="Rrayns blog"/>
  <meta name="author" content="Robert Raynsford"/>
  <meta name="generator" content={Astro.generator}/>
  <title>r.rayns - {title}</title>
</head>
<body
  class="max-w-prose py-12 px-4 m-auto text-xl bg-cyan-100 dark:bg-zinc-900 dark:text-slate-400 text-slate-800"
>
<header class="flex flex-col content-start mb-4">
  <div class="mb-0 flex flex-row justify-between">
    <h1
      class="text-2xl dark:text-cyan-300 text-cyan-800 font-semibold font-mono"
    >
      <a href="/">[r.rayns]</a>
    </h1>
    <ThemeToggle/>
  </div>
  <nav aria-label="primary-navigation" class="mt-auto font-mono">
        <span>
          <NavLink href="/">Blog</NavLink> /
          <NavLink href="/links" data-tag="navLink">Links</NavLink> /
          <NavLink href="/contact" data-tag="navLink">Contact</NavLink>
        </span>
  </nav>
</header>
<slot/>
</body>
</html>
